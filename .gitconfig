[user]
	name = John Griffiths
	email = john@johnantoni.com
[diff]
[color]
    ui = auto
[alias]
    st = status
    co = checkout
    ci = commit
    amend = commit --amend
    aa = add --all
    fo = fetch origin
    fa = fetch --all
    ff = merge --ff-only
    noff = merge --no-ff
    pullff = pull --ff-only
    pom = push origin master
    b = branch
    ba = branch -a

    # undo = "reset --soft HEAD~1"

    # rebase http://technosorcery.net/blog/2012/08/05/updated-git-rebase-interactive-autosquash-commit-preparation/
    fixup = !sh -c 'git commit --fixup=$1' -
    squash = !sh -c 'git commit --squash=$1' -
    ri = rebase --interactive --autosquash

    # remove submodule http://stackoverflow.com/questions/1260748/how-do-i-remove-a-git-submodule
    rms = "!f(){ git rm --cached \"$1\";rm -r \"$1\";git config -f .gitmodules --remove-section \"submodule.$1\";git config -f .git/config --remove-section \"submodule.$1\";git add .gitmodules; }; f"

    # diff
    d = difftool
    di = diff
    dc = diff --cached
    ds = diff --stat=160,120
    dh1 = diff HEAD~1

    # list
    head = !git l -1
    h = !git head
    hp = "!. ~/.githelpers && show_git_head"
    r = !git l -30
    ra = !git r --all
    l = "!. ~/.githelpers && pretty_git_log"
    la = !git l --all
    lt = log --graph --pretty=format:"%C(yellow)%h%C(cyan)%d%Creset * %cd * %s %C(white)- %an, %ar%Creset"
    ll = log --stat --abbrev-commit

    # stats
    div = divergence
    gn = goodness
    gnc = goodness --cached

[core]
  autocrlf = input
  excludesfile = /Users/johngriffiths/.gitignore
[github]
  user = johnantoni

[mergetool]
  keepBackup = true
  prompt = false
[difftool]
  prompt = false
[diff]
  tool = vimdiff

[hooks "pre-commit"]
  enabled = true
  # whitespace-rb = true
[hooks "post-checkout"]
  enabled = true
  update-submodules-rb = true
  check-bundle-rb = true
[hooks "post-merge"]
  enabled = true
  update-submodules-rb = true
  check-bundle-rb = true
