[user]
	name = John Griffiths
	email = john@johnantoni.com
[diff]
[color]
    ui = auto
[alias]
    st = status
    ci = commit
    co = checkout
    di = diff
    dc = diff --cached
    amend = commit --amend
    aa = add --all
    fo = fetch origin
    ff = merge --ff-only
    pullff = pull --ff-only
    noff = merge --no-ff
    div = divergence
    gn = goodness
    gnc = goodness --cached
    fa = fetch --all
    pom = push origin master
    b = branch
    ba = branch -a
    ds = diff --stat=160,120
    dh1 = diff HEAD~1

    head = !git l -1
    h = !git head
    hp = "!. ~/.githelpers && show_git_head"
    r = !git l -30
    ra = !git r --all
    l = "!. ~/.githelpers && pretty_git_log"
    la = !git l --all
    lt = log --graph --pretty=format:"%C(yellow)%h%C(cyan)%d%Creset * %cd * %s %C(white)- %an, %ar%Creset"
    ll = log --stat --abbrev-commit
    undo = "reset --soft HEAD~1"

[core]
  autocrlf = input
[mergetool]
  keepBackup = true
  prompt = false
[github]
  user = johnantoni
